{
  "general": {
    "random_seed": 0,
    "split_style": "random",
    "validation_percent": 0.15,
    "feature_representation": "morganfingerprint-2-1024"
  },
  "datasets":{
    "bace":{
      "suffix": ".csv",
      "X": "mol",
      "y": "pIC50",
      "y_process": "x > 6",
      "y_new": "active"
    },
    "clintox": {
      "suffix": ".csv.gz",
      "X": "smiles",
      "y": "CT_TOX"
    },
    "deepchem_Lipophilicity": {
      "suffix": ".csv",
      "short_name": "lipophilicity",
      "X": "smiles",
      "y": "exp",
      "y_process": "x >= -0.4 and x <= 5.6",
      "y_new": "drug_like"
    },
    "HIV": {
      "suffix": ".csv",
      "X": "smiles",
      "y": "HIV_active"
    },
    "Solubility_delaney-processed": {
      "suffix": ".csv",
      "short_name": "sol_del",
      "X": "smiles",
      "y": "measured log solubility in mols per litre",
      "y_process": "x >= -1",
      "y_new": "binned_sol"
    },
    "tox21": {
      "suffix": ".csv.gz",
      "X": "smiles",
      "y": "NR-AhR"
    }
  },
  "models": {
    "SVC": {
      "C": 1,
      "kernel": "linear",
      "degree": 3,
      "gamma": "scale",
      "probability": true
    },
    "LogisticRegression": {
      "solver": "lbfgs",
      "max_iter": 1000,
      "verbose": false
    },
    "RandomForestClassifier":{
      "n_jobs": -1
    },
    "KNeighborsClassifier": {
      "n_neighbors": 5,
      "n_jobs": -1
    },
    "GradientBoostingClassifier":{
      "n_estimators": 100, 
      "learning_rate": 0.1,
      "max_depth": 1
    },
    "DummyClassifier":{
    "strategy": "most_frequent"
    }
  },
  "evaluation_metrics":[
    "accuracy_score",
    "f1_score",
    "roc_auc_score",
    "log_loss",
    "matthews_corrcoef"
  ]
}